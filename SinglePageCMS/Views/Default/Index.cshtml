    <!--<script type="text/javascript" src="content/js/waypoints.min.js"></script>-->
    <script type="text/javascript" src="content/js/readmore.min.js"></script>
    <script type="text/javascript" src="content/js/pace.min.js"></script>
    <script type="text/javascript" src="content/js/custom.js"></script>

</body>