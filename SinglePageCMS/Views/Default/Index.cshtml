<!DOCTYPE html>

<html lang="en-US">
<head>
    <title>@ViewBag.title</title>
    <meta name="description" content="@ViewBag.description">
    <meta name="keywords" content="@ViewBag.keywords">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="UTF-8" />
    <link href="content/style.css" rel="stylesheet" />
    <link href="content/type/fontello.css" rel="stylesheet">
    <link href="content/fonts/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="content/fonts/elegant-fonts.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="content/bootstrap/css/bootstrap.css" type="text/css">
    <link rel="stylesheet" href="content/css/owl.carousel.css" type="text/css">
    <link rel="stylesheet" href="content/css/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="content/css/style.css" type="text/css">
</head>
<body class="links-hover-effect" data-spy="scroll" data-target=".navigation">

    <div class="page-wrapper" id="page-top">

        <header id="page-header">
            <nav class="navigation background-is-dark">
                <div class="container">
                    <div class="wrapper">
                        <div class="left">
                            <a href="~/" class="brand"><img src="content/img/logo.png" alt=""></a>
                        </div>
                        <!--end left-->
                        <div class="right">
                            <ul class="nav navigation-links animate">
                                @foreach (var i in ViewBag.UstMenu) {
                                    <li><a href="@i.Url" @(i.Blank?"target=\"_blank\"":"") class="scroll">@i.Title</a></li>
                                }
                            </ul>
                            <div class="nav-btn">
                                <figure></figure>
                                <figure></figure>
                                <figure></figure>
                            </div>
                        </div>
                        <!--end right-->
                    </div>
                </div>
                <!--end container-->
            </nav>


            @if (ViewBag.page.Title == "Anasayfa") {
                <div class="hero-section background-is-dark">
                    <div class="wrapper">
                        <div class="hero-title">
                            <div class="container">
                                <h1 class="animate">HAYATIN HER ANINDA<br>SİZİNLEYİZ!</h1>
                                <form class="animate" id="form-hero">
                                    <label for="form-hero-email">Doğaya saygılı, keyifle yaşanacak güvenli mekanlar sunuyoruz.</label>
                                    <div class="row">

                                    </div>
                                </form>
                                <!--end form-hero-->
                            </div>
                            <!--end container-->
                        </div>
                        <!--end hero-title-->
                    </div>
                    <!--end wrapper-->
                    <div class="owl-carousel" data-owl-dots="0" data-owl-nav="1" data-owl-autoplay="1" data-owl-loop="1" data-owl-fadeout="1">
                        <div class="hero-slide">
                            <div class="bg-transfer"><img src="content/uploads/0a18e0d1-0af7-40b0-a0d9-cbb7ec9fdf63.jpg" alt=""></div>
                        </div>
                        <div class="hero-slide">
                            <div class="bg-transfer"><img src="content/uploads/0b1058de-0824-461a-af2a-34f4aa2257ce.jpg" alt=""></div>
                        </div>
                        <div class="hero-slide">
                            <div class="bg-transfer"><img src="content/uploads/1bafaff2-b44f-404b-8c6e-7704c9379c73.jpg" alt=""></div>
                        </div>
                    </div>
                    <!--end owl-carousel-->
                </div>
            }
            
        </header>

        <div id="page-content">
 
            @foreach (var i in ViewBag.sections) {
                <div id="section-@i.ID" class="block @(i.Invert ? "background-is-dark" : "")">

                    <div class="container">
                        <h2>@i.Title</h2>
                    </div>

                    <div class="@(i.Full ? "" : "container")">
                        <div class="row">
                            @foreach (var j in ((IEnumerable<dynamic>)i.Block).OrderBy(x => x.No)) {
                                <div class="col-md-@j.Width col-sm-@j.Width">
                                    @Html.Action("View", (string)j.GetType().BaseType.Name, new { ID = j.ID })
                                </div>
                            }
                        </div>
                    </div>

                    @if (i.Invert) {
                        <div class="background-wrapper">
                            <div class="bg-transfer opacity-15" style="background-image: url('content/admin/img/bg-01.jpg');">
                                <img src="content/admin/img/bg-01.jpg" alt="">
                            </div>
                            <div class="background-color background-color-black"></div>
                        </div>
                    }

                </div>
            }

        </div>

        <footer id="page-footer" class="block background-is-dark">

            <div class="container">
                <!--end brand-->
                <div class="row" style="font-size:11px">
                    <div class="col-md-3">
                        <p>
                            <strong>MERKEZ</strong> <br> Kıvılcım İş Merkezi Cumhuriyet Bulvarı <br> No: 67 Ortakent Bodrum
                            <br> TEL 0 252 382 87 40 FAX 0 252 382 87 41
                            <br> info@emremuhendislikbodrum.com
                        </p>
                        <br />
                        <ul class="social">
                            <li><a href="#"><i class="icon-s-rss"></i></a></li>
                            <li><a href="#"><i class="icon-s-twitter"></i></a></li>
                            <li><a href="#"><i class="icon-s-facebook"></i></a></li>
                            <li><a href="#"><i class="icon-s-pinterest"></i></a></li>
                            <li><a href="#"><i class="icon-s-linkedin"></i></a></li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <strong>TURGUTREİS SHOWROOM</strong> <br> Mehmet Hilmi Caddesi No: 52/B <br> Turgutreis - Bodrum
                            <br> TEL - FAX 0 252 382 54 17
                            <br> turgutreis@emremuhendislikbodrum.com
                        </p>
                    </div>
                    <div class="col-md-3">
                        <p>
                            <strong>NOIROT SHOWROOM</strong> <br> Kıvılcım İş Merkezi Cumhuriyet Bulvarı <br> No: 67 Ortakent Bodrum
                            <br> TEL 0 252 382 87 40 FAX 0 252 382 87 41
                            <br> noirot@emremuhendislikbodrum.com
                        </p>

                    </div>
                    <div class="col-md-3">
                        <p>
                            <strong>ATÖLYE</strong> <br> İnlitepe Mevkii No: 33-34 <br> Turgutreis - Bodrum
                            <br> TEL 0 252 382 82 01 FAX 0 252 382 81 99
                            <br> atolye@emremuhendislikbodrum.com
                        </p>
                    </div>
                    <!--end col-md-4-->
                    <!--end col-md-8-->
                </div>
                <!--end row-->
                <hr>
                <div class="note">(C) Emre Mühendislik İnşaat</div>
                <!--end note-->
                <div class="numbers">


                    <!--end numbers-->
                    <div class="to-top">
                        <a href="#page-top" class="arrow-up framed scroll">
                            <i class="arrow_up"></i>
                        </a>
                    </div>
                </div>
                <!--end container-->
                <div class="background-wrapper">
                    <div class="bg-transfer opacity-30">
                        <img src="content/img/footer-bg.jpg" alt="">
                    </div>
                    <div class="background-color background-color-black"></div>
                </div>
                <!--end background-wrapper-->
            </div>
        </footer>

    </div>

