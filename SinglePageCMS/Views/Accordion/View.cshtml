<div class="panel-group background-solid" id="faq" role="tablist" aria-multiselectable="true" data-scroll-reveal="enter left and move 20px after">
    @foreach (var i in ViewBag.model.BlockItem) {
    <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="faq@(i.ID)">
            <h4 class="panel-title">
                <a role="button" data-toggle="collapse" data-parent="#faq" href="#answer@(i.ID)" aria-expanded="true" aria-controls="answer@(i.ID)">@i.Title</a>
            </h4>
        </div>
        <div id="answer@(i.ID)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="faq@(i.ID)">
            <div class="panel-body">
                <p>
                    @i.Description
                </p>
            </div>
        </div>
    </div>
    }
</div>
