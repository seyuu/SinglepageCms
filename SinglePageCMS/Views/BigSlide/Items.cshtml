@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="block-header">
    <div class="row remove-margin">
        <div class="col-md-10">
            <div class="header-section">
                <h1>
                    Resimler<br />
                    <small></small>
                </h1>
            </div>
        </div>
        <div class="col-md-2">
            <a href="~/admin/slide/itemadd/@ViewBag.slideID" class="header-link">
                <h1 class="animation-pullDown">
                    <i class="fa fa-plus animation-expandUp"></i><br><small>Ekle</small>
                </h1>
            </a>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Resim</th>
                <th>Başlık</th>
                <th>Aciklama</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in ViewBag.model) {
                <tr>
                    <td>@Util.thumbnail(i.Image, 50, 50)</td>
                    <td>@i.Title</td>
                    <td>@i.Description</td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm">
                            <a href="~/admin/slide/itemedit/@i.ID" class="btn btn-success"><i class="fa fa-pencil"></i> Düzenle</a>
                            <a href="~/admin/slide/itemdelete/@i.ID" class="btn btn-danger" onclick="return confirm('Kaydı silmek istediğinize emin misiniz?')"><i class="fa fa-times"></i> Sil</a>
                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>