<div class="owl-carousel big-gallery"
    data-owl-items="@ViewBag.model.Items"
    data-owl-autoplay="@(ViewBag.model.Autoplay ?1:0)" 
    data-owl-nav="@(ViewBag.model.Nav ?1:0)" 
    data-owl-dots="@(ViewBag.model.Dot ?1:0)"
    data-owl-center="1"
    data-owl-loop="1"
    data-owl-nav-container="#bigGallery@(ViewBag.ID)">
    <div class="slide">
        <div class="container">
            @foreach (var i in ViewBag.model.BlockItem) {
                <img src="~/content/uploads/@(i.Image)" alt=""> 
                <div class="description">
                    <h3 class="framed">@i.Title</h3>
                </div>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="owl-nav-wrapper">
        <div class="owl-nav" id="@(ViewBag.ID)"></div>
    </div>
</div>