
<div class="block">
    <div class="content">
        <div class="row">
            @foreach (var i in ViewBag.model.BlockItem) {
                var col = (int)Math.Floor((float)12 / ViewBag.model.Columns);
                <div class="col-md-@col col-sm-@col">
                    <div class="blog-item">
                        <a href="#" class="image no-roll-effect" data-toggle="modal" data-target="#project-@i.ID">
                            <h3>@i.Title</h3>
                            <div class="bg-transfer">
                                @Util.thumbnail(i.Image, 360, 140)
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@foreach (var i in ViewBag.model.BlockItem) {
    <div id="project-@i.ID" class="modal fade apartment-selector" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="icon_close"></i></button>
            <div class="modal-content">
                <div class="modal-header">
                    <div class="title">
                        <h1 class="modal-title">@i.Title</h1>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="left">
                        <img src="~/Content/uploads/@i.Image" />
                    </div>
                    <div class="right">
                        @Html.Raw(i.Description)
                    </div>
                </div>
            </div>
        </div>
    </div>
}