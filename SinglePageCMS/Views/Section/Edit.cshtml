@{
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="block-header">
    <div class="header-section">
        <h1>
            Bölüm Düzenle<br />
            <small></small>



        </h1>
    </div>
</div>

<form action="@Request.Url" method="post" enctype="multipart/form-data" class="form-horizontal">

    <div class="form-group">
        <label class="col-md-2 control-label" for="Title">Başlık</label>
        <div class="col-md-3">
            <input id="Title" name="Title" value="@ViewBag.model.Title" maxlength="150" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="Invert">Geniş</label>
        <div class="col-md-3">
            <input type="checkbox" id="Full" name="Full" value="true" @(ViewBag.model.Full ? "checked" : "")>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label" for="Invert">Renk Ters Çevrilsin mi?</label>
        <div class="col-md-3">
            <input type="checkbox" id="Invert" name="Invert" value="true" @(ViewBag.model.Invert ? "checked" : "")>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <a href="~/admin/section" class="btn btn-default"><i class="fa fa-times"></i> Vazgeç</a>
            <button type="submit" class="btn btn-primary"><i class="fa fa-arrow-right"></i> Kaydet</button>
        </div>
    </div>

</form>